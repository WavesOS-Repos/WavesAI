{
  "_comment": "WavesAI Configuration File",
  "_comment2": "Optimized for Intel i5 12th Gen + RTX 3050 8GB + 16GB RAM",
  
  "model": {
    "path": "~/.wavesai/models/Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf",
    "context_length": 8192,
    "gpu_layers": 33,
    "threads": 8,
    "batch_size": 512,
    "seed": -1,
    "use_mmap": true,
    "use_mlock": false
  },
  
  "generation": {
    "temperature": 0.6,
    "top_p": 0.9,
    "top_k": 40,
    "repeat_penalty": 1.15,
    "max_tokens": 512,
    "stop_sequences": ["<|eot_id|>", "<|end_of_text|>", "User:", "[You]"]
  },
  
  "personality": {
    "style": "jarvis",
    "formality": "professional",
    "humor_level": "moderate",
    "verbosity": "balanced",
    "use_sir_madam": true,
    "startup_greeting": true,
    "mission_mode_available": true
  },
  
  "system": {
    "auto_execute_safe_commands": false,
    "dangerous_commands_blocked": true,
    "require_confirmation_for_sudo": true,
    "command_timeout": 30,
    "max_file_search_results": 50,
    "max_process_list": 20
  },
  
  "features": {
    "enable_web_search": true,
    "enable_weather": true,
    "enable_notifications": true,
    "enable_clipboard": true,
    "enable_git_integration": true,
    "enable_package_management": true,
    "enable_service_control": true,
    "enable_network_tools": true,
    "enable_media_control": true,
    "enable_automation": true
  },
  
  "network": {
    "search_engine": "duckduckgo",
    "default_location": "auto",
    "weather_service": "wttr.in",
    "request_timeout": 5,
    "max_retries": 3,
    "use_proxy": false,
    "proxy_url": ""
  },
  
  "paths": {
    "database": "~/.wavesai/config/memory.db",
    "log_file": "~/.wavesai/config/logs/wavesai.log",
    "modules_dir": "~/.wavesai/config/modules",
    "temp_dir": "/tmp/wavesai",
    "backup_dir": "~/.wavesai/config/backups"
  },
  
  "logging": {
    "level": "INFO",
    "max_file_size": 10485760,
    "backup_count": 5,
    "log_commands": true,
    "log_responses": true,
    "log_errors": true
  },
  
  "memory": {
    "max_history_length": 100,
    "context_window_messages": 10,
    "save_conversations": true,
    "auto_cleanup_days": 30,
    "remember_preferences": true
  },
  
  "ui": {
    "color_scheme": "default",
    "use_colors": true,
    "show_system_info_on_startup": true,
    "show_typing_indicator": true,
    "ascii_art_logo": true,
    "notification_sound": false
  },
  
  "performance": {
    "enable_gpu_monitoring": true,
    "enable_cpu_monitoring": true,
    "enable_ram_monitoring": true,
    "monitor_interval": 2,
    "max_ram_usage_percent": 80,
    "max_gpu_temp": 85,
    "max_cpu_temp": 90
  },
  
  "automation": {
    "enable_cron_integration": true,
    "enable_systemd_timers": true,
    "auto_update_check": false,
    "auto_cleanup": true,
    "cleanup_interval": "weekly"
  },
  
  "security": {
    "sandbox_mode": false,
    "whitelist_commands": [],
    "blacklist_commands": [
      "rm -rf /",
      "mkfs",
      "dd if=",
      ":(){:|:&};:",
      "chmod -R 777 /",
      "chown -R"
    ],
    "require_explicit_sudo": true,
    "log_security_events": true
  },
  
  "integrations": {
    "hyprland": {
      "enabled": true,
      "wallpaper_control": true,
      "window_management": true
    },
    "git": {
      "enabled": true,
      "auto_detect_repos": true,
      "default_branch": "main"
    },
    "docker": {
      "enabled": false,
      "auto_cleanup": false
    },
    "openrgb": {
      "enabled": true,
      "default_mode": "static",
      "default_color": "0080ff"
    }
  },
  
  "custom_commands": {
    "aliases": {
      "update": "sudo pacman -Syu",
      "cleanup": "yay -Sc --noconfirm && sudo pacman -Rns $(pacman -Qtdq) --noconfirm",
      "myip": "curl -s ifconfig.me"
    },
    "shortcuts": {
      "dev": "cd ~/projects",
      "downloads": "cd ~/Downloads"
    }
  },
  
  "experimental": {
    "enable_voice_input": false,
    "enable_voice_output": false,
    "enable_gui_dashboard": false,
    "enable_rest_api": false,
    "api_port": 8080,
    "enable_websocket": false,
    "websocket_port": 8081
  },
  
  "presets": {
    "mission_mode": {
      "disable_notifications": true,
      "monitor_resources": true,
      "close_unnecessary_apps": false,
      "increase_priority": true
    },
    "diagnostics_mode": {
      "full_system_scan": true,
      "check_temperatures": true,
      "check_disk_health": true,
      "check_services": true,
      "generate_report": true
    },
    "power_saver": {
      "gpu_layers": 20,
      "threads": 4,
      "reduce_monitoring": true
    },
    "performance": {
      "gpu_layers": 40,
      "threads": 8,
      "max_tokens": 1024
    }
  }
}
